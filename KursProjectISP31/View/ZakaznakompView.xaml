<UserControl x:Class="KursProjectISP31.View.ZakaznakompView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KursProjectISP31.View"
             xmlns:vm="clr-namespace:KursProjectISP31.ViewModel"
            xmlns:Menu="clr-namespace:KursProjectISP31.Utills"
            xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
            mc:Ignorable="d" 
            d:DesignHeight="450" d:DesignWidth="800"
                xmlns:sys="clr-namespace:System;assembly=mscorlib"
            Style="{StaticResource Page_Style}">
    <UserControl.DataContext>
        <vm:ZakaznakompViewModel/>
    </UserControl.DataContext>
    <Grid>
        <Border CornerRadius="0,20,20,0" Margin="0,5,5,0">
            <Grid Margin="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="9*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBlock Style="{StaticResource Text_Style}" Grid.Row="0"
                    Text="Заказы для компаний"/>
                <StackPanel Orientation="Horizontal" Grid.Row="1"
                     HorizontalAlignment="Right" 
                     VerticalAlignment="Center">
                    <Button Margin="5 0">
                        <Image Source="/Assets/tablik.png" />
                    </Button>
                    <Button Margin="5 0">
                        <Image Source="/Assets/blok.png"/>
                    </Button>
                </StackPanel>
                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Style="{StaticResource Text_Style}">
                     Показать
                        </TextBlock>
                        <ComboBox Width="100">
                            <sys:String>10</sys:String>
                            <sys:String>50</sys:String>
                            <sys:String>100</sys:String>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Column="1">
                        <Image Source="/Assets/search.png" 
                        Style="{StaticResource Image_Style}"/>
                        <TextBox Width="200" Height="25" Text="{Binding SearchText,UpdateSourceTrigger=PropertyChanged}">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="TextChanged">
                                    <i:InvokeCommandAction
                                 Command="{Binding SearchCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                        </TextBox>
                    </StackPanel>
                    <Button Grid.Column="2" HorizontalAlignment="Right"
                     Background="Transparent" Command="{Binding AddCommand}"
                     BorderBrush="Black">
                        <Image Source="/Assets/i.png"/>
                    </Button>
                </Grid>
                <DataGrid ItemsSource="{Binding Zakaznakomps}"
               AutoGenerateColumns="False" Grid.Row="3" IsReadOnly="True"
                   SelectedItem="{Binding SelectedZakaznakomp}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseDoubleClick">
                            <i:InvokeCommandAction
                         Command="{Binding EditCommand}"
                         CommandParameter="{Binding SelectedZakaznakomp}"/>
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Header="Изменить" 
                               Command="{Binding EditCommand}"
                               CommandParameter="{Binding SelectedZakaznakomp}"/>
                            <MenuItem Header="Удалить" 
                               Command="{Binding DeleteCommand}"
                               CommandParameter="{Binding SelectedZakaznakomp}"/>
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="номер заказа для поставки" Width="3*" Binding="{Binding Idzakazanapost}"/>
                        <DataGridTextColumn Header="номер компании" Width="1*" Binding="{Binding Idkomp}"/>
                        <DataGridTextColumn Header="???" Width="1*" Binding="{Binding Post}"/>
                        <DataGridTextColumn Header="цена за товар" Width="1*" Binding="{Binding Cinazatovar}"/>
                        <DataGridTextColumn Header="статус поставки" Width="1*" Binding="{Binding Statyspost}"/>
                        
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>
    </Grid>
</UserControl>
